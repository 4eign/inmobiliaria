<div class="container">

  <form{{ attributes }}>

    <div class="row">{{ form.message }}</div>
    <div class="row">
      <div class="col-md-6">
        {{ form.name }}
        {{ form.phone_number }}
        {{ form.email }}
      </div>
      <div class="col-md-6">
        {{ form.description }}
      </div>

    </div>
    <div class="clearfix"></div>
    <div class="col-lg-12 text-center">
      {{ form.actions.submit }}
    </div>
    {{ form.form_build_id }} {# required #}
    {{ form.form_id }} {# required #}
    {{ form.form_token }} {# required #}

  </form>

</div>

